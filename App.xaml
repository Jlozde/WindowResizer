<Application x:Class="WindowResizer.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
			<ResourceDictionary>
				<ResourceDictionary.MergedDictionaries>
				<ResourceDictionary Source="Localization/Strings.tr-TR.xaml"/>
			</ResourceDictionary.MergedDictionaries>

			<!-- Palette -->
			<Color x:Key="C_Bg">#0B1020</Color>
			<Color x:Key="C_Surf">#111827</Color>
			<Color x:Key="C_Surf2">#0E1626</Color>
			<Color x:Key="C_Stroke">#243247</Color>

			<Color x:Key="C_Text">#EAF0FF</Color>
			<Color x:Key="C_Sub">#9FB0CE</Color>

			<Color x:Key="C_Accent">#6EE7FF</Color>
			<Color x:Key="C_Accent2">#8B5CF6</Color>

			<SolidColorBrush x:Key="BgBrush" Color="{StaticResource C_Bg}"/>
			<SolidColorBrush x:Key="SurfBrush" Color="{StaticResource C_Surf}"/>
			<SolidColorBrush x:Key="Surf2Brush" Color="{StaticResource C_Surf2}"/>
			<SolidColorBrush x:Key="StrokeBrush" Color="{StaticResource C_Stroke}"/>

			<SolidColorBrush x:Key="TextBrush" Color="{StaticResource C_Text}"/>
			<SolidColorBrush x:Key="SubBrush" Color="{StaticResource C_Sub}"/>
			<SolidColorBrush x:Key="AccentBrush" Color="{StaticResource C_Accent}"/>
			<SolidColorBrush x:Key="Accent2Brush" Color="{StaticResource C_Accent2}"/>

			<!-- ✅ EN ÖNEMLİ FIX:
				 ComboBox popup / menu / varsayılan "Window" brush'ları artık koyu -->
			<SolidColorBrush x:Key="{x:Static SystemColors.WindowBrushKey}" Color="{StaticResource C_Surf2}"/>
			<SolidColorBrush x:Key="{x:Static SystemColors.WindowTextBrushKey}" Color="{StaticResource C_Text}"/>
			<SolidColorBrush x:Key="{x:Static SystemColors.ControlBrushKey}" Color="{StaticResource C_Surf}"/>
			<SolidColorBrush x:Key="{x:Static SystemColors.ControlTextBrushKey}" Color="{StaticResource C_Text}"/>
			<SolidColorBrush x:Key="{x:Static SystemColors.HighlightBrushKey}" Color="#233A55"/>
			<SolidColorBrush x:Key="{x:Static SystemColors.HighlightTextBrushKey}" Color="{StaticResource C_Text}"/>

			<DropShadowEffect x:Key="Shadow" BlurRadius="26" ShadowDepth="10" Opacity="0.32" Color="#000000"/>

			<!-- Window -->
			<Style TargetType="Window">
				<Setter Property="FontFamily" Value="Segoe UI"/>
				<Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
			</Style>

			<!-- Text -->
			<Style TargetType="TextBlock">
				<Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
			</Style>
			
			<!-- =========================
				 Elegant Dark ScrollBar
				 ========================= -->
			<Style TargetType="{x:Type ScrollBar}">
				<Setter Property="Width" Value="10"/>
				<Setter Property="Background" Value="Transparent"/>
				<Setter Property="Foreground" Value="{StaticResource StrokeBrush}"/>
				<Setter Property="Template">
					<Setter.Value>
						<ControlTemplate TargetType="{x:Type ScrollBar}">
							<Grid x:Name="Root" Background="Transparent" Margin="2">
								<Track x:Name="PART_Track" IsDirectionReversed="True">
									<!-- Track background (çok hafif) -->
									<Track.DecreaseRepeatButton>
										<RepeatButton Command="ScrollBar.PageUpCommand"
													  Opacity="0"
													  IsHitTestVisible="False"/>
									</Track.DecreaseRepeatButton>

									<Track.Thumb>
										<Thumb x:Name="Thumb"
											   Height="60"
											   Background="#2B3A52"
											   BorderBrush="#30445F"
											   BorderThickness="1"/>
									</Track.Thumb>

									<Track.IncreaseRepeatButton>
										<RepeatButton Command="ScrollBar.PageDownCommand"
													  Opacity="0"
													  IsHitTestVisible="False"/>
									</Track.IncreaseRepeatButton>
								</Track>
							</Grid>

							<ControlTemplate.Triggers>
								<Trigger Property="Orientation" Value="Horizontal">
									<Setter Property="Height" Value="10"/>
									<Setter Property="Width" Value="Auto"/>
								</Trigger>

								<Trigger SourceName="Thumb" Property="IsMouseOver" Value="True">
									<Setter TargetName="Thumb" Property="Background" Value="#35506F"/>
									<Setter TargetName="Thumb" Property="BorderBrush" Value="{StaticResource AccentBrush}"/>
								</Trigger>

								<Trigger SourceName="Thumb" Property="IsDragging" Value="True">
									<Setter TargetName="Thumb" Property="Background" Value="#2F5C7A"/>
									<Setter TargetName="Thumb" Property="BorderBrush" Value="{StaticResource AccentBrush}"/>
								</Trigger>

								<Trigger Property="IsEnabled" Value="False">
									<Setter TargetName="Thumb" Property="Opacity" Value="0.35"/>
								</Trigger>
							</ControlTemplate.Triggers>
						</ControlTemplate>
					</Setter.Value>
				</Setter>
			</Style>

			<!-- Thumb template: yuvarlak köşe için (WPF Thumb'da CornerRadius yok, bu yüzden template gerekiyor) -->
			<Style TargetType="{x:Type Thumb}">
				<Setter Property="Template">
					<Setter.Value>
						<ControlTemplate TargetType="{x:Type Thumb}">
							<Border x:Name="Bd"
									CornerRadius="6"
									Background="{TemplateBinding Background}"
									BorderBrush="{TemplateBinding BorderBrush}"
									BorderThickness="{TemplateBinding BorderThickness}"/>
						</ControlTemplate>
					</Setter.Value>
				</Setter>
			</Style>


			<!-- Buttons: rounded + hover -->
			<Style TargetType="Button">
				<Setter Property="Background" Value="#141C2B"/>
				<Setter Property="BorderBrush" Value="{StaticResource StrokeBrush}"/>
				<Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
				<Setter Property="BorderThickness" Value="1"/>
				<Setter Property="Padding" Value="14,10"/>
				<Setter Property="MinHeight" Value="36"/>
				<Setter Property="MinWidth" Value="92"/>
				<Setter Property="Cursor" Value="Hand"/>
				<Setter Property="Template">
					<Setter.Value>
						<ControlTemplate TargetType="Button">
							<Border x:Name="Bd"
									Background="{TemplateBinding Background}"
									BorderBrush="{TemplateBinding BorderBrush}"
									BorderThickness="{TemplateBinding BorderThickness}"
									CornerRadius="12">
								<ContentPresenter HorizontalAlignment="Center"
												  VerticalAlignment="Center"/>
							</Border>
							<ControlTemplate.Triggers>
								<Trigger Property="IsMouseOver" Value="True">
									<Setter TargetName="Bd" Property="Background" Value="#182338"/>
									<Setter TargetName="Bd" Property="BorderBrush" Value="#2D3D55"/>
								</Trigger>
								<Trigger Property="IsPressed" Value="True">
									<Setter TargetName="Bd" Property="Background" Value="#0F172A"/>
								</Trigger>
								<Trigger Property="IsEnabled" Value="False">
									<Setter TargetName="Bd" Property="Opacity" Value="0.45"/>
								</Trigger>
							</ControlTemplate.Triggers>
						</ControlTemplate>
					</Setter.Value>
				</Setter>
			</Style>

			<Style x:Key="PrimaryButton" TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
				<Setter Property="Background" Value="#1A2A3F"/>
				<Setter Property="BorderBrush" Value="{StaticResource AccentBrush}"/>
			</Style>

			<!-- TextBox: rounded -->
			<Style TargetType="TextBox">
				<Setter Property="Background" Value="{StaticResource Surf2Brush}"/>
				<Setter Property="BorderBrush" Value="{StaticResource StrokeBrush}"/>
				<Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
				<Setter Property="CaretBrush" Value="{StaticResource AccentBrush}"/>
				<Setter Property="BorderThickness" Value="1"/>
				<Setter Property="Padding" Value="12,9"/>
				<Setter Property="Template">
					<Setter.Value>
						<ControlTemplate TargetType="TextBox">
							<Border x:Name="Bd"
									Background="{TemplateBinding Background}"
									BorderBrush="{TemplateBinding BorderBrush}"
									BorderThickness="{TemplateBinding BorderThickness}"
									CornerRadius="14">
								<ScrollViewer x:Name="PART_ContentHost"
											  Margin="{TemplateBinding Padding}"/>
							</Border>
							<ControlTemplate.Triggers>
								<Trigger Property="IsKeyboardFocused" Value="True">
									<Setter TargetName="Bd" Property="BorderBrush" Value="{StaticResource AccentBrush}"/>
								</Trigger>
							</ControlTemplate.Triggers>
						</ControlTemplate>
					</Setter.Value>
				</Setter>
			</Style>

			<!-- ComboBox basic -->
			<Style TargetType="ComboBox">
				<Setter Property="Background" Value="{StaticResource Surf2Brush}"/>
				<Setter Property="BorderBrush" Value="{StaticResource StrokeBrush}"/>
				<Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
				<Setter Property="BorderThickness" Value="1"/>
				<Setter Property="Padding" Value="12,7"/>
			</Style>

			<Style TargetType="CheckBox">
				<Setter Property="Foreground" Value="{StaticResource SubBrush}"/>
			</Style>
		</ResourceDictionary>
    </Application.Resources>
</Application>
